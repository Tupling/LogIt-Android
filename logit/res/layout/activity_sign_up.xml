<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.daletupling.logit_android.SignUp$PlaceholderFragment" >

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Username" />

    <Button
        android:id="@+id/signup_signupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_alignRight="@+id/signup_email"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="22dp"
        android:text="Sign Up" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_password"
        android:layout_alignRight="@+id/signup_password"
        android:layout_below="@+id/signup_password"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_username"
        android:layout_alignRight="@+id/signup_username"
        android:layout_below="@+id/signup_username"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Password" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_signupBtn"
        android:layout_alignRight="@+id/signup_signupBtn"
        android:layout_below="@+id/signup_signupBtn"
        android:layout_marginTop="14dp"
        android:text="Cancel" />

</RelativeLayout>
